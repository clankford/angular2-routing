{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "noLib": false,
        "emitDecoratorMetadata": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "node_modules/angular2/ts/typings/node/node.d.ts",
        "node_modules/angular2/typings/browser.d.ts",
        "./app/ts/app.ts",
        "./app/ts/components/AboutComponent.ts",
        "./app/ts/components/ContactComponent.ts",
        "./app/ts/components/HomeComponent.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    }
}
